<div class="thumbnail" id="book-<%= @book.id %>">
  <div class="row">
    <div class="col-xs-12">
      <%= image_tag @book.cover_default, size: Settings.book.size %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-xs-6 text-center">
      <%= link_to book_book_user_path(@book, action_type: action_type(@book_user)),
        remote: true, method: :post do %>
        <i class="glyphicon <%= @book_user.favorite? ? 'glyphicon-remove' :
          'glyphicon-heart' %>"></i><br /><%= t "book.label.favor" %>
      <% end %>
    </div>
    <div class="col-xs-6 text-center">
      <div class="dropdown">
        <a href="" class="dropdown-toggle" data-toggle="dropdown">
          <i class="glyphicon glyphicon-book"></i><br />
          <% if @book_user.status == "readed" %>
            <%= t "book.label.readed" %>
          <% elsif @book_user.status == "reading" %>
            <%= t "book.label.reading" %>
          <% else %>
            <%= t "book.label.read" %>
          <% end %>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <%= link_to book_book_user_path(@book, action_type: Settings.book_users.reading),
            remote: true, method: :post do %>
              <li><%= t "book.label.reading" %></li>
          <% end %>
          <%= link_to book_book_user_path(@book, action_type: Settings.book_users.readed),
            remote: true, method: :post do %>
              <li><%= t "book.label.readed" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
