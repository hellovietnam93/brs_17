var ready = function() {
  $("#rate").raty({
    size     : 24,
    starHalf : "<%= asset_path "raty/lib/images/star-half.png" %>",
    starOff  : "<%= asset_path "raty/lib/images/star-off.png" %>",
    starOn   : "<%= asset_path "raty/lib/images/star-on.png" %>",
    targetType: "number",
    targetKeep: true,
    click: function(score, evt) {
      $("#review_score").val(score);
    }
  });
}

$(document).on("ready page:load", ready);
